{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    // "module": "ESNext",
    // "moduleResolution": "Node",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", 
    "rootDir": "./src" 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}


<div class="table-block">
    <h2 class="section-title">Developers</h2>
    <br>
    <table id="developers-table">
        <thead>
            <tr>
                <th>Developer ID</th>
                <th>Developer Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr data-value="{{this.id}}">
                <td>{{this.id}}</td>
                <td>{{this.developer_name}}</td>
                <td>{{this.street_address}}</td>
                <td>{{this.city}}</td>
                <td>{{this.state}}</td>
                <td>{{this.zipcode}}</td>
                <td>{{this.email}}</td>
                <td>{{this.contact}}</td>
                <td><button onclick="deleteDeveloper({{this.id}})">Delete</button></td>
            </tr>
            {{else}}
            <tr>
                <td colspan="9">No developers found.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
    <script src="./js/delete_developer.js"></script>
</div>

